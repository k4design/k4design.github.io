# Database
DATABASE_URL="postgresql://username:password@localhost:5432/aperture_global?schema=public"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Storage (S3 Compatible)
STORAGE_BUCKET="aperture-global-media"
STORAGE_REGION="us-east-1"
STORAGE_ENDPOINT="https://s3.amazonaws.com"
STORAGE_ACCESS_KEY_ID="your-access-key"
STORAGE_SECRET_ACCESS_KEY="your-secret-key"

# MLS Integration (RESO Web API)
RESO_CLIENT_ID="your-reso-client-id"
RESO_CLIENT_SECRET="your-reso-client-secret"
RESO_API_BASE_URL="https://api.reso.org"
RESO_REDIRECT_URI="http://localhost:3000/api/mls/callback"

# Email (for notifications and leads)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@apertureglobal.com"

# Mapbox (optional)
MAPBOX_ACCESS_TOKEN="your-mapbox-token"

# Redis (optional for caching)
REDIS_URL="redis://localhost:6379"

# Upstash QStash (for background jobs)
QSTASH_URL="https://qstash.upstash.io"
QSTASH_TOKEN="your-qstash-token"

# Development
NODE_ENV="development"
